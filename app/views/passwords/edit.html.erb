<div class="user-edit-page">
  <div class="actions">
    <!-- Left column -->
    <div class="user-edit-page">
  <div class="actions">
    <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
      <%= link_to "Edit Profile", edit_user_path( Current.user ), class: "btn btn-secondary" %>
      <br>
      <%= link_to "Change Password", edit_password_path, class: "btn btn-secondary" %>

