  </div>

 <div class="details">
    <!-- Right column -->
<%= form_with model: Current.user, local: true, html: {class: "form-horizontal form-edit-user"} do |f| %>
<div class="form-group row">
  <div class="col-sm-3 col-form-label">
    <% if Current.user.avatar.attached? %>
      <%= image_tag Current.user.avatar, class: 'avatar' %>
    <%end %>
  </div>

  <div class="col-sm-9">
    <p class="username"><%=Current.user.username %></p>
    <a class="change-photo" href="<%= user_path( Current.user ) %>">Go to profile page</a>
  </div>
</div>
<br>
<div class="form-group row">
    <%= f.label :avatar, class: 'col-sm-3 col-form-label' %>
  <div class="col-sm-9">
    <%= f.file_field :avatar, class: 'form-control' %>
  </div>
</div>
<br>
<div class="form-group row">
    <%= f.label :name, class: 'col-sm-3 col-form-label' %>
  <div class="col-sm-9">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>
<br>
<div class="form-group row">
  <%= f.label :username, class: 'col-sm-3 col-form-label' %>
  <div class="col-sm-9">
      <%= f.text_field :username, class: 'form-control' %>
  </div>
</div>
<br>
<div class="form-group row">
      <%= f.label :website, class: 'col-sm-3 col-form-label' %>
  <div class="col-sm-9">
      <%= f.text_field :website, class: 'form-control' %>
  </div>
</div>
<br>
<div class="form-group row">
      <%= f.label :bio, class: 'col-sm-3 col-form-label' %>
  <div class="col-sm-9">
      <%= f.text_area :bio, class: 'form-control' %>
  </div>
</div>
<br>
<div class="form-group row">
      <%= f.label :email, class: 'col-sm-3 col-form-label' %>
  <div class="col-sm-9">
      <%= f.text_field :email, class: 'form-control' %>
  </div>
</div>
<br>
<div class="form-group row">
      <%= f.label :phone, class: 'col-sm-3 col-form-label' %>
  <div class="col-sm-9">
      <%= f.text_field :phone, class: 'form-control' %>
  </div>
</div>
<br>
<div class="form-group row">
  <div class="col-sm-3"></div>
  <div class="col-sm-9">
      <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
</div>

<% end %>
</div>
